generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  username     String   @unique
  email        String?
  role         String   @default("user")
  passwordHash String
  passwordSalt String
  createdAt    DateTime @default(now())
  viewLogs     ViewLog[]
  sessions     Session[]
}

model Product {
  id             String   @id @default(uuid())
  serial         String   @unique
  customer       String
  project        String
  productType    String?
  year           Int
  onedriveFolder String?
  status         String   @default("open")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @default(now())
  files          File[]
  checklist      ChecklistItem[]
}

model File {
  id        String   @id @default(uuid())
  productId String?
  type      String
  category  String?
  fileId    String
  fileUrl   String?
  thumbnailId  String?
  thumbnailUrl String?
  createdAt DateTime @default(now())
  product   Product? @relation(fields: [productId], references: [id])
}

model ChecklistItem {
  id        String   @id @default(uuid())
  productId String
  category  String
  itemKey   String
  completed Boolean  @default(false)
  updatedAt DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id])

  @@unique([productId, category, itemKey])
}

model ViewLog {
  id        String   @id @default(uuid())
  userId    String
  productId String?
  fileId    String?
  action    String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model Session {
  token     String   @id
  userId    String
  createdAt DateTime @default(now())
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id])
}
