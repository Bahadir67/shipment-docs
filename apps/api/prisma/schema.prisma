generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  username     String   @unique
  email        String?
  role         String   @default("user")
  passwordHash String
  passwordSalt String
  createdAt    DateTime @default(now())
  viewLogs     ViewLog[]
  sessions     Session[]
}

model Product {
  id             String   @id @default(uuid())
  serial         String   @unique
  customer       String
  project        String
  productType    String?
  year           Int
  onedriveFolder String?
  status       String   @default("open") // open, completed, deleted
  checklistMask String  @default("00000000000000000000000000000000") // 128-bit hex string (32 chars)
  
  files        File[]
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@unique([year, serial])
}

model File {
  id          String   @id @default(uuid())
  productId   String
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  type        String   // photo, document
  category    String?  // onden, sagdan...
  fileId      String
  fileUrl     String?  // Remote URL if needed
  thumbnailId String?
  thumbnailUrl String?
  
  createdAt   DateTime @default(now())
}

model ViewLog {
  id        String   @id @default(uuid())
  userId    String
  productId String?
  fileId    String?
  action    String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model Session {
  token     String   @id
  userId    String
  createdAt DateTime @default(now())
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id])
}
